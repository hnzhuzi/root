apiVersion: apps/v1
kind: Deployment
metadata:
  name: sentinel-client-token-server
  namespace: ns-v7g3
  labels:
    k8s-app: sentinel-client-token-server
spec:
  selector:
    matchLabels:
      k8s-app: sentinel-client-token-server
  template:
    metadata:
      labels:
        k8s-app: sentinel-client-token-server
      annotations:
        scheduler.alpha.kubernetes.io/critical-pod: ''
        scheduler.alpha.kubernetes.io/tolerations: '[{"key":"CriticalAddonsOnly", "operator":"Exists"}]'
    spec:
      containers:
      - name: sentinel-client-token-server
        image: 10.190.2.171/sentinel/sentinel-client-token-server:v1.0.1
        imagePullPolicy: IfNotPresent
        lifecycle:
          preStop:
             exec:
              command: ["/bin/bash", "-c", "PID=`ps -ef | grep java| grep -v grep | awk '{print $2}'` && kill -SIGTERM $PID && while ps -p $PID > /dev/null; do sleep 1; done;"]
        env:
          - name : JAVA_OPTIONS
            value: "-Xms1500M -Xmx1500M"
          - name : APP_OPTIONS
            value: "-Dserver.port=8888 -Dcsp.sentinel.dashboard.server=sentinel-dashboard:8888 -Dproject.name=ns-v7g3"
          - name : ZK_OPTIONS
            value: "-Dzk.address=10.190.2.181:2181,10.190.2.182:2181,10.190.2.183:2181"
        resources:
          limits:
            cpu: 2000m
            memory: 2000Mi
          requests:
            cpu: 1000m
            memory: 1500Mi
        ports:
        - containerPort: 8888
      serviceAccountName: sa-v7g3
      imagePullSecrets:
      - name: regsecret
---
apiVersion: v1
kind: Service
metadata:
  name: sentinel-client-token-server
  namespace: ns-v7g3
  labels:
    k8s-app: sentinel-client-token-server
spec:
  selector:
    k8s-app: sentinel-client-token-server
  ports:
  - port: 8888
