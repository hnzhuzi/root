apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: v7-webapp-bosv1
  namespace: ns-v7g0
  labels:
    k8s-app: v7-webapp-bosv1
spec:
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  replicas: 2
  selector:
    matchLabels:
      k8s-app: v7-webapp-bosv1
  template:
    metadata:
      labels:
        k8s-app: v7-webapp-bosv1
      annotations:
        scheduler.alpha.kubernetes.io/critical-pod: ''
        scheduler.alpha.kubernetes.io/tolerations: '[{"key":"CriticalAddonsOnly", "operator":"Exists"}]'
    spec:
      containers:
      - name: v7-webapp-bosv1
        image: 10.190.2.171/v7/webapp:v1.8.88_v1.9.131_v2.0.9
        imagePullPolicy: IfNotPresent
        lifecycle:
          preStop:
             exec:
              command: ["/bin/bash", "-c", "PID=`ps -ef | grep java| grep -v grep | awk '{print $2}'` && kill -SIGTERM $PID && while ps -p $PID > /dev/null; do sleep 1; done;"]
        env:
        - name : configUrl
          value: 10.190.2.181:2181,10.190.2.182:2181.10.190.2.183:2181
        - name : JVM_OPTS
          value: "-server -XX:+UseContainerSupport -Xms4g -Xmx4g  -XX:MaxMetaspaceSize=512M  -XX:+DisableExplicitGC -Duser.timezone=GMT+8 -Dfile.encoding=UTF-8 -XX:CompressedClassSpaceSize=128m -javaagent:/jmx_prometheus_javaagent-0.12.0.jar=1234:/jmx_config.yaml"
        - name : clusterName
          value: ns-v7g0
        resources:
          limits:
            cpu: 4
            memory: 6Gi
          requests:
            cpu: 1
            memory: 4Gi
        ports:
        - name: web
          containerPort: 8080
        - name: health
          containerPort: 9999
        - name: jvm
          containerPort: 1234
        livenessProbe:
          httpGet:
            path: /ierp/form/healthWebapp.do
            port: web
          failureThreshold: 3
          initialDelaySeconds: 70
          periodSeconds: 10
          timeoutSeconds: 2
        readinessProbe:
          httpGet:
            path: /ierp/form/healthWebapp.do
            port: web
          failureThreshold: 3
          initialDelaySeconds: 50
          periodSeconds: 6
          timeoutSeconds: 2
      serviceAccountName: sa-v7g0
---
apiVersion: v1
kind: Service
metadata:
  name: v7-webapp-bosv1
  namespace: ns-v7g0
  labels:
    k8s-app: v7-webapp-bosv1
    prometheus: jvm
spec:
  selector:
    k8s-app: v7-webapp-bosv1
  ports:
  - name: web
    port: 8080
    targetPort: 8080
  - name: jvm
    port: 1234
    targetPort: 1234
