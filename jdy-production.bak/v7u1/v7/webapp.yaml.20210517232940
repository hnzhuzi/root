            memory: 3Gi
        ports:
        - name: web
          containerPort: 8080
        - name: health
          containerPort: 9999
        - name: jvm
          containerPort: 1234
        livenessProbe:
          httpGet:
            path: /ierp/form/healthWebapp.do
            port: web
          failureThreshold: 3
          initialDelaySeconds: 70
          periodSeconds: 10
          timeoutSeconds: 2
        readinessProbe:
