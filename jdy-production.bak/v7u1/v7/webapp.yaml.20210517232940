          value: mse-d7385ec0-zk.mse.aliyuncs.com:2181
        - name : JVM_OPTS
          value: "-server -Xms2g -Xmx2g  -XX:MaxMetaspaceSize=512m  -XX:+DisableExplicitGC -Duser.timezone=GMT+8 -Dfile.encoding=UTF-8 -XX:CompressedClassSpaceSize=128m -javaagent:/jmx_prometheus_javaagent-0.12.0.jar=1234:/jmx_config.yaml -javaagent:/usr/local/ppagent/pinpoint-bootstrap-2.0.4.jar -Dpinpoint.applicationName=ns-v7g15 -Dpinpoint.agentId=webapp"
        - name : clusterName
          value: ns-v7g15
        - name : sentinelDashboardServer
          value: "sentinel-dashboard:8888"
        resources:
          limits:
            cpu: 2000m
            memory: 4Gi
          requests:
